<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomepageActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="HOSPITAL"
        android:layout_below="@+id/loginButton"
        android:textColor="#ff32beff"
        android:textSize="20sp" />

    <ListView
        android:id="@android:id/list"
        android:layout_height = "match_parent"
        android:layout_width = "match_parent"
        android:layout_below="@+id/filterCat" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filterCat"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filterDate"
        android:layout_alignTop="@+id/filterCat"
        android:layout_toRightOf="@+id/filterCat"
        android:layout_toEndOf="@+id/filterCat"
        android:visibility="invisible" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtrar"
        android:id="@+id/filterBtn"
        android:layout_toRightOf="@+id/filterDate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@android:id/list"
        android:layout_below="@+id/title"
        android:visibility="invisible" />

</RelativeLayout>
