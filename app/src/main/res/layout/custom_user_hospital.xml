<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.exgerm.register.UserHospitals">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOSPITAL"
        android:drawableLeft="@drawable/ic_launcher"
        android:id="@+id/textUserHospital"
        android:textColor="@color/blueColor"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/textFrequence"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL"
        android:id="@+id/textTotal"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textChecked"
        android:layout_toStartOf="@+id/textChecked"
        android:textColor="@color/blueColor"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/textUserHospital" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHECKED"
        android:id="@+id/textChecked"
        android:textColor="@color/orangeColor"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/textTotal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textTotal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FREQUENCE"
        android:id="@+id/textFrequence"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textTotal"
        android:layout_toStartOf="@+id/textTotal"
        android:layout_alignBottom="@+id/textUserHospital"
        android:gravity="center" />

</RelativeLayout>
