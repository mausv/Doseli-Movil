<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1">

        <ImageView
            android:layout_width="129dp"
            android:layout_height="105dp"
            android:id="@+id/imageView"
            android:src="@drawable/doseli_logo"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.12"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grupo:"
            android:id="@+id/groupTV"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginGroupSpinner"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/groupTV"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/imageView"
            android:layout_toStartOf="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital:"
            android:id="@+id/hospitalTV"
            android:gravity="center_vertical"
            android:layout_below="@+id/loginGroupSpinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginHospitalSpinner"
            android:layout_below="@+id/hospitalTV"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/imageView"
            android:layout_toStartOf="@+id/imageView" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar sesiÃ³n"
            android:textColor="@color/whiteColor"
            android:background="@color/blueColor"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/loginHospitalSpinner"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version"
            android:id="@+id/versionTV"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/loginButton"
            android:layout_centerHorizontal="true" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/challengeChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/versionTV" />

        <TextView
            android:id="@+id/latitudeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/longitudeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:visibility="invisible"
            android:layout_above="@+id/latitudeTextView"
            android:layout_alignParentLeft="true" />

</RelativeLayout><!-- From: file:/C:/Users/mausv/Documents/Git/Doseli-Movil/app/src/main/res/layout/activity_login.xml -->