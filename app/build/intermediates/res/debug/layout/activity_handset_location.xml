<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.exgerm.register.HandsetLocation">

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:textColor="@color/whiteColor"
        android:background="@color/blueColor"
        android:id="@+id/scan"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="APARATO"
        android:id="@+id/aparatoTV"
        android:layout_alignBottom="@+id/scan"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/scan"
        android:layout_toRightOf="@+id/scan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grupo:"
        android:id="@+id/grupoTV"
        android:layout_below="@+id/scan"
        android:layout_alignBottom="@+id/group"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/aparatoTV"
        android:layout_toLeftOf="@+id/aparatoTV" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group"
        android:layout_below="@+id/aparatoTV"
        android:visibility="visible"
        android:layout_toEndOf="@+id/grupoTV"
        android:layout_toRightOf="@+id/grupoTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospital:"
        android:id="@+id/textView4"
        android:layout_below="@+id/grupoTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/group"
        android:layout_alignBottom="@+id/hospital"
        android:textSize="16sp"
        android:textIsSelectable="false"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/group" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hospital"
        android:layout_below="@+id/group"
        android:visibility="visible"
        android:layout_toEndOf="@+id/grupoTV"
        android:layout_toRightOf="@+id/grupoTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Area:"
        android:id="@+id/textView5"
        android:textSize="16sp"
        android:textIsSelectable="false"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/area"
        android:layout_toStartOf="@+id/hospital"
        android:layout_toLeftOf="@+id/hospital" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/area"
        android:layout_below="@+id/hospital"
        android:visibility="visible"
        android:layout_toEndOf="@+id/textView4"
        android:layout_toRightOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Piso:"
        android:id="@+id/textView6"
        android:textSize="16sp"
        android:textIsSelectable="false"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/mLocation"
        android:layout_toStartOf="@+id/area"
        android:layout_toLeftOf="@+id/area" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mLocation"
        android:layout_below="@+id/area"
        android:layout_toEndOf="@+id/textView6"
        android:visibility="visible"
        android:layout_toRightOf="@+id/textView6" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:textColor="@color/whiteColor"
        android:background="@color/blueColor"
        android:id="@+id/updateLocation"
        android:layout_below="@+id/ref"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:layout_below="@+id/updateLocation"
        android:id="@+id/idQr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/token"
        android:layout_below="@+id/updateLocation"
        android:layout_toRightOf="@+id/idQr"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Referencia"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView6"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/mLocation"
        android:layout_toLeftOf="@+id/mLocation"
        android:layout_alignBottom="@+id/ref" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ref"
        android:layout_below="@+id/mLocation"
        android:layout_toRightOf="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
