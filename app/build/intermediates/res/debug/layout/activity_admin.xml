<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.exgerm.register.AdminActivity"
    android:padding="0dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospitales Totales: "
        android:id="@+id/tvTotalHospitalsAdmin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="2dp"
        android:textColor="@color/darkBlueColor"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aparatos Totales: "
        android:id="@+id/tvTotalHandsetsAdmin"
        android:layout_below="@+id/tvTotalHospitalsAdmin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="2dp"
        android:textColor="@color/darkBlueColor"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/tvTotHspValAdmin"
        android:layout_alignTop="@+id/tvTotalHospitalsAdmin"
        android:layout_toRightOf="@+id/tvTotalHospitalsAdmin"
        android:layout_toEndOf="@+id/tvTotalHospitalsAdmin"
        android:padding="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/tvTotHandsetsValAdmin"
        android:layout_alignTop="@+id/tvTotalHandsetsAdmin"
        android:layout_alignLeft="@+id/tvTotHspValAdmin"
        android:layout_alignStart="@+id/tvTotHspValAdmin"
        android:padding="2dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@android:id/list"
        android:layout_below="@+id/tvTotalHandsetsAdmin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
