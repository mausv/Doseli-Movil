<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/usernameHP"
        android:text="username"
        android:textColor="#ff000541"
        android:drawableLeft="@drawable/ic_launcher" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/dateHP"
        android:text="date"
        android:paddingLeft="48dp"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/statusHP"
        android:text="Status"
        android:maxLength="50"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="20dp"
        android:textColor="#ff000000" />

</LinearLayout><!-- From: file:/C:/Users/Mauricio/Documents/Doseli-Movil/app/src/main/res/layout/custom_homepage_layout.xml -->